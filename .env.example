# LM Studio-backed FastAPI (using OpenAI-compatible API)
# Copy to .env and edit as needed.

# LM Studio OpenAI-compatible endpoint
OPENAI_BASE_URL=http://localhost:1234/v1
OPENAI_API_KEY=lm-studio

# Bind host/port for Uvicorn
HOST=127.0.0.1
PORT=8000

# CORS comma-separated origins
CORS_ORIGINS=*

# Default models for specialized endpoints
DEFAULT_REGULAR_MODEL=qwen/qwen3-4b-2507
DEFAULT_VISION_MODEL=qwen3-vl-4b-instruct

# Timeout for LLM requests in seconds (default: 300)
# Increase for slow models or large image processing
LLM_TIMEOUT=300
